<?xml version="1.0" encoding="UTF-8"?> 
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" 
	version="1.0"> 
    <entity class="es.mdef.gesinalog_API.entidades.IncidenciaConId" access="FIELD">
    	<table name="INCIDENCIAS" />
        <attributes> 
            <id name="id" >
            	<generated-value strategy="IDENTITY"/>
            </id>
            <basic name="descripcion" optional="false" />
            <basic name="estadoIncidencia" optional="false">
           			<enumerated>ORDINAL</enumerated>
           	</basic>
            <basic name="fechaAlta" optional="false" />
            <basic name="fechaInicio" optional="false" />
			<basic name="tipoIncidencia" optional="false">
				 	<enumerated>ORDINAL</enumerated>
			 </basic>
             <basic name="urgencia" optional="false">
				 	<enumerated>ORDINAL</enumerated>
			 </basic>
			<many-to-one name="instalacion" fetch="LAZY" optional="false">
				<join-column name="instalacionId"/>
			</many-to-one>
			 <one-to-many name="valoraciones" mapped-by="incidencia" target-entity="es.mdef.gesinalog_API.entidades.Valoracion"></one-to-many>
        </attributes>
     </entity>
</entity-mappings>